@model OgrenciBilgiSistemi.Models.OgrenciDersKayit

@{
    ViewData["Title"] = "Ders Kaydı Sil";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h5 class="mb-0">Ders Kaydını Sil</h5>
            <a asp-action="Index" class="btn btn-sm btn-secondary">Listeye Dön</a>
        </div>

        <div class="alert alert-danger mb-4">
            <h6 class="mb-2">Bu kaydı silmek istediğinize emin misiniz?</h6>
            <p>Bu işlem geri alınamaz.</p>
        </div>

        <div class="row">
            <div class="col-md-8">
                <table class="table table-bordered">
                    <tr>
                        <th>Öğrenci No</th>
                        <td>@Html.DisplayFor(model => model.Ogrenci.OgrenciNo)</td>
                    </tr>
                    <tr>
                        <th>Öğrenci Adı</th>
                        <td>@Html.DisplayFor(model => model.Ogrenci.AdSoyad)</td>
                    </tr>
                    <tr>
                        <th>Ders Kodu</th>
                        <td>@Html.DisplayFor(model => model.Ders.DersKodu)</td>
                    </tr>
                    <tr>
                        <th>Ders Adı</th>
                        <td>@Html.DisplayFor(model => model.Ders.DersAdi)</td>
                    </tr>
                    <tr>
                        <th>Dönem</th>
                        <td>@Html.DisplayFor(model => model.Donem)</td>
                    </tr>
                    <tr>
                        <th>Not</th>
                        <td>
                            @if (Model.Not.HasValue)
                            {
                                @Html.DisplayFor(model => model.Not)
                            }
                            else
                            {
                                <span class="text-muted">Henüz not verilmedi</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Kayıt Tarihi</th>
                        <td>@Html.DisplayFor(model => model.KayitTarihi)</td>
                    </tr>
                </table>

                <form asp-action="Delete" class="mt-3">
                    <input type="hidden" asp-for="KayitId" />
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div> 