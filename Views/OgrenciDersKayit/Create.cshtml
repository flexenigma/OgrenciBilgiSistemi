@model OgrenciBilgiSistemi.Models.OgrenciDersKayit

@{
    ViewData["Title"] = "Yeni Ders Kaydı";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h5 class="mb-0">Yeni Ders Kaydı</h5>
            <a asp-action="Index" class="btn btn-sm btn-secondary">Listeye Dön</a>
        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="OgrenciId" class="control-label">Öğrenci</label>
                        <select asp-for="OgrenciId" class="form-select" asp-items="ViewBag.OgrenciId">
                            <option value="">-- Öğrenci Seçiniz --</option>
                        </select>
                        <span asp-validation-for="OgrenciId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DersId" class="control-label">Ders</label>
                        <select asp-for="DersId" class="form-select" asp-items="ViewBag.DersId">
                            <option value="">-- Ders Seçiniz --</option>
                        </select>
                        <span asp-validation-for="DersId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="Donem" class="control-label"></label>
                        <select asp-for="Donem" class="form-select">
                            <option value="">-- Dönem Seçiniz --</option>
                            <option value="2024-2025 Güz">2024-2025 Güz</option>
                            <option value="2024-2025 Bahar">2024-2025 Bahar</option>
                            <option value="2025-2026 Güz">2025-2026 Güz</option>
                            <option value="2025-2026 Bahar">2025-2026 Bahar</option>
                        </select>
                        <span asp-validation-for="Donem" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 