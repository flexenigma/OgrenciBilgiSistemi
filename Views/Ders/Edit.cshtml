@model OgrenciBilgiSistemi.Models.Ders

@{
    ViewData["Title"] = "Ders Düzenle";
}

<h1 class="page-title">
    <i class="fas fa-edit mr-2"></i>Ders Düzenle
</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DersId" />

                    <div class="form-group">
                        <label asp-for="DersKodu" class="control-label"></label>
                        <input asp-for="DersKodu" class="form-control" />
                        <span asp-validation-for="DersKodu" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DersAdi" class="control-label"></label>
                        <input asp-for="DersAdi" class="form-control" />
                        <span asp-validation-for="DersAdi" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Kredi" class="control-label"></label>
                        <input asp-for="Kredi" class="form-control" type="number" min="1" max="10" />
                        <span asp-validation-for="Kredi" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="AktifMi" /> @Html.DisplayNameFor(model => model.AktifMi)
                        </label>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save mr-1"></i>Güncelle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-1"></i>Listeye Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                <i class="fas fa-info-circle mr-1"></i>Bilgilendirme
            </div>
            <div class="card-body">
                <p>
                    <strong>Ders Kodu:</strong> Benzersiz olmalýdýr (örn. MAT101).
                </p>
                <p>
                    <strong>Ders Adý:</strong> Dersin tam adýný yazýnýz.
                </p>
                <p>
                    <strong>Kredi:</strong> 1-10 arasýnda bir deðer giriniz.
                </p>
                <p>
                    <strong>Aktif Mi?:</strong> Dersin sistemde aktif olup olmadýðýný belirtir.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
