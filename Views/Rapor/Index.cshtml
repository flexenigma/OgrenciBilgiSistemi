@{
    ViewData["Title"] = "Raporlar";
    Layout = "_Layout";
}

<h1 class="page-title">
    <i class="fas fa-chart-pie mr-2"></i>Raporlar
</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-users fa-4x text-primary"></i>
                </div>
                <h5 class="card-title">Bölüm Öğrenci Raporu</h5>
                <p class="card-text">Bölümlere göre öğrenci sayılarını görüntüleyin.</p>
                <a asp-controller="Rapor" asp-action="BolumOgrenciRaporu" class="btn btn-primary">
                    <i class="fas fa-chart-bar mr-1"></i>Raporu Görüntüle
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-book fa-4x text-success"></i>
                </div>
                <h5 class="card-title">Ders Kayıt Raporu</h5>
                <p class="card-text">Derslere göre kayıt sayılarını görüntüleyin.</p>
                <a asp-controller="Rapor" asp-action="DersKayitRaporu" class="btn btn-success">
                    <i class="fas fa-chart-bar mr-1"></i>Raporu Görüntüle
                </a>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-user-cog fa-4x text-danger"></i>
                </div>
                <h5 class="card-title">Kullanıcı İşlemleri Raporu</h5>
                <p class="card-text">Kullanıcıların sistem işlemlerini görüntüleyin.</p>
                <a asp-controller="Rapor" asp-action="KullaniciIslemleriRaporu" class="btn btn-danger">
                    <i class="fas fa-chart-line mr-1"></i>Raporu Görüntüle
                </a>
            </div>
        </div>
    </div>
    }
</div>
