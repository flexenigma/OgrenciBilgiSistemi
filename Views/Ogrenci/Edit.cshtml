@model OgrenciBilgiSistemi.Models.Ogrenci

@{
    ViewData["Title"] = "Öðrenci Düzenle";
}

<h1 class="page-title">
    <i class="fas fa-user-edit mr-2"></i>Öðrenci Düzenle
</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="OgrenciId" />

                    <div class="form-group">
                        <label asp-for="OgrenciNo" class="control-label"></label>
                        <input asp-for="OgrenciNo" class="form-control" />
                        <span asp-validation-for="OgrenciNo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AdSoyad" class="control-label"></label>
                        <input asp-for="AdSoyad" class="form-control" />
                        <span asp-validation-for="AdSoyad" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Bolum" class="control-label"></label>
                        <input asp-for="Bolum" class="form-control" />
                        <span asp-validation-for="Bolum" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="GirisTarihi" class="control-label"></label>
                        <input asp-for="GirisTarihi" class="form-control datepicker" type="date" />
                        <span asp-validation-for="GirisTarihi" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefon" class="control-label"></label>
                        <input asp-for="Telefon" class="form-control" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="AktifMi" /> @Html.DisplayNameFor(model => model.AktifMi)
                        </label>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save mr-1"></i>Güncelle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-1"></i>Listeye Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                <i class="fas fa-info-circle mr-1"></i>Bilgilendirme
            </div>
            <div class="card-body">
                <p>
                    <strong>Öðrenci Numarasý:</strong> Benzersiz olmalýdýr.
                </p>
                <p>
                    <strong>Ad Soyad:</strong> Öðrencinin tam adýný yazýnýz.
                </p>
                <p>
                    <strong>E-posta:</strong> Geçerli bir e-posta adresi giriniz.
                </p>
                <p>
                    <strong>Aktif Mi?:</strong> Öðrencinin sistemde aktif olup olmadýðýný belirtir.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}